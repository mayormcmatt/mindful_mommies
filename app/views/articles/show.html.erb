<h2><%= @article.title %></h2>

<p><%= @article.body %></p>

<%= link_to "Edit", edit_article_path(@article) %>
<!-- alert message will pop up upon request to delete -->
<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete?"} %>
<%= link_to "< Back", articles_path %>

<!-- path to partial of form for entering comments to article -->
<%= render partial: 'comments/comments_form' %>

<!-- path to comment partial in articles folder -->
<%= render partial: 'articles/comment', collection: @article.comments %>